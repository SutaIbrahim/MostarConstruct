
@{
    ViewData["Title"] = "Index";
    int brojac = 1;
}
<h2>Index</h2>
@model IEnumerable<Ponuda>


<div class="portlet">
    <div class="portlet-title form-inline">
        <h3>
            Lista ponuda
        </h3>
        <div class="pull-right">

            <div class="form-group">
                <br />
                <a id="link" href="@Url.Action("Dodaj", "Ponuda")" class="btn btn-primary modal-link"> + Dodaj</a>
                <br />
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Redni broj</th>
            <th>Naziv</th>
            <th>Datum izdavanja</th>
            <th>Sadržaj</th>
            <th>Potrebno vrijeme </th>
            <th>Predlozena cijena</th>
            <th>Izdao</th>


            <th class="text-center">Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@(brojac++)</td>
                <td>@r.Naziv</td>
                <td>@r.DatumIzdavanja</td>
                <td>@r.Sadrzaj</td>
                <td>@r.PotrebnoVrijeme (mjeseci)</td>
                <td>@r.PredlozenaCijena</td>
                <td>
                    @r.ClanUprave.Osoba.Ime
                &nbsp;
                @r.ClanUprave.Osoba.Prezime
                &nbsp;
                    <b>[Clan uprave] </b> 
            </td>





            <td class="text-center">
                <a class="btn btn-info">Print</a>&nbsp;<br /><br />
                <a asp-action="Obrisi" asp-route-id="@r.PonudaID" class="btn btn-danger">Obriši</a>
            </td>

        </tr>
        }

    </tbody>
</table>
