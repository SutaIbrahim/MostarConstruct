
@{
    ViewData["Title"] = "Index";
    int brojac = 1;
}
@*@model IEnumerable<Uplata>*@

@model UplateIndexViewModel

<section id="main-content">
    <section class="wrapper">
        <section class="panel">
            <header class="panel-heading">
                <h2>Lista uplata</h2>

            </header>


            <div class="panel-body">
                    <div class="pull-left">
                        <form asp-action="Pretraga" method="post">
                            <div class="form-inline">
                                <input asp-for="srchTxt" class="form-control" placeholder="Naziv projekta" value="@Model.srchTxt" /> @*Uplate za trazeni projekat*@

                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Pretraga po projektu</button>

                                @if (Model.srchTxt != null)
                                {
                                    <a asp-action="Pretraga" class="btn btn-primary">Prikaži sve</a>
                                }

                            </div>
                        </form>
                    </div>

                    <div class="pull-right">

                        <div class="form-group">
                            <br />
                            <a id="link" href="@Url.Action("Dodaj", "Uplate")" class="btn btn-primary modal-link"><i class="fa fa-plus"></i> Dodaj</a>
                            <br />
                        </div>
                    </div>
                <br />
                <br />
                <br />

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Redni broj</th>
                            <th>Naziv Projekta</th>
                            <th>Klijent</th>
                            <th>Datum uplate</th>
                            <th>Broj uplate </th>
                            <th>Iznos</th>
                            <th>Svrha</th>
                            <th>Procesirao</th>

                            <th class="text-center">Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Uplate)
                        {
                            <tr>
                                <td>@(brojac++)</td>
                                <td>@r.Projekt.Naziv</td>
                                <td>@r.Klijent.KontaktOsoba</td>
                                <td>@r.DatumUplate</td>
                                <td>@r.BrojUplate</td>
                                <td>@r.Iznos</td>
                                <td>@r.Svrha</td>
                                <td>
                                    @r.ClanUprave.Osoba.Ime
                                    &nbsp;
                                    @r.ClanUprave.Osoba.Prezime
                                    &nbsp;
                                    <b>[Clan uprave] </b>
                                </td>


                                <td class="text-center">
                                    <a asp-action="Uredi" asp-route-UplataID="@r.UplataID" class="btn btn-info">Uredi</a>&nbsp;<br /><br />
                                    <a asp-action="Obrisi" asp-route-id="@r.UplataID" class="btn btn-danger">Obriši</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>


            </div>
        </section>
    </section>
</section>